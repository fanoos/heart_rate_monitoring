<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackDocHeroLogin"

    tools:context="com.monitorin.hero.doc.docheroheartratemonitoring.HeartrateMonitorActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LLTopMenu"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@color/colorBackDocHero"
            android:orientation="horizontal">

          <ImageButton
                 android:id="@+id/ImgBtnBackChildDashboard"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:tooltipText="App Setting"
              app:srcCompat="@drawable/ic_arrow_back_black_24dp"  />




            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/LLMiddel"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                      <ImageView
                               android:id="@+id/imageView"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                          android:src="@drawable/docheroright" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Resting HR: "
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/lbl_restingHR"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="none"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"

                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="BPM"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"

                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Maximal HR: "
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/lbl_maximalHR"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="none"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"

                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:text="BPM"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"

                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Device Name: "
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/lbl_device_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="none"
                                    android:textColor="#ffffff"
                                    android:textSize="18dp"
                                    android:layout_gravity="center"

                                    android:fontFamily="@font/syncopate"
                                    android:gravity="center"/>



                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LLBottomMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:background="@color/darkorange2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                      <ImageView
                              android:id="@+id/ImgFindSensorHeartrateMonitor"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_margin="2dp"
                            android:src="@drawable/device_btn" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    <ImageView
                              android:id="@+id/ImgRunHeartrateMonitor"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_margin="2dp"
                           android:src="@drawable/heart_rate_monitor_btn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    <ImageView
                               android:id="@+id/ImgAnalyzesHeartrateMonitor"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_margin="2dp"
                            android:src="@drawable/heart_report_btn" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLBottomLable"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:background="@color/darkorange3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Find HR Sensor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Run HR Monitor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Analyzes Data" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>

